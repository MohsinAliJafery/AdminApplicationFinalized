<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noColor"
    tools:context=".KalyanMatkaInterface">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/kalyan_matka_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">


        <Button
            android:id="@+id/single_new"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:background="@layout/primary_background_for_button"
            android:text="Single New"
            android:textColor="@color/noColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/public_info" />

        <Button
            android:id="@+id/jodi_new"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:background="@layout/primary_background_for_button"
            android:text="Jodi New"
            android:textColor="@color/noColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/single_new" />

        <Button
            android:id="@+id/panel_new"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:background="@layout/primary_background_for_button"
            android:text="Panel New"
            android:textColor="@color/noColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jodi_new" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>